{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{texto}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{else}}

{{/each}}
<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">

        <form action="/admin/postagens/nova" method="post">

            <label for="titulo">Titulo</label>
                <input type="text" id="titulo" name="titulo" placeholder="Titulo da Postage" class="form-control">

            <label for="slug">Slug</label>
                <input type="text" id="slug" name="slug" placeholder="Slug da Postage" class="form-control">
            
            <label for="descricao">Descricao</label>
                <input type="text" id="descricao" name="descricao" class="form-control">

            <label for="conteudo">Conteudo</label>
                <textarea name="conteudo" id="conteudo"class="form-control"></textarea>
               

            <label for="categoria">Categoria</label>
                <select name="categoria" id="categoria" class="form-control">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma Categoria Registrada</option>
                    {{/each}}
                </select>


            <button type="submit" class="btn btn-success mt-2">Criar Postagem</button>

        </form>
        
    </div>
</div>
