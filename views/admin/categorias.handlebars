<div>
    <h2>Lista de Categorias</h2>
    <hr>
    <a href="/admin/categorias/add">
        <button class="btn btn-success">Nova Categoria</button>
    </a>
</div>

{{#each getCategoria}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data: {{data}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success mt-2">Editar</button>
            </a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4>Nenhuma Categoria Registrada</h4>

{{/each}}