{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{texto}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{else}}

{{/each}}
<h3>Editar Postagens</h3>
<div class="card">
    <div class="card-body">

        <form action="/admin/postagens/edit" method="post">

            <input type="hidden" name="id" value="{{postagem._id}}">

            <label for="titulo">Titulo</label>
                <input type="text" id="titulo" value="{{postagem.titulo}}" name="titulo" placeholder="Titulo da Postage" class="form-control">

            <label for="slug">Slug</label>
                <input type="text" id="slug" value="{{postagem.slug}}" name="slug" placeholder="Slug da Postage" class="form-control">
            
            <label for="descricao">Descricao</label>
                <input type="text" id="descricao" value="{{postagem.descricao}}" name="descricao" class="form-control">

            <label for="conteudo">Conteudo</label>
                <textarea name="conteudo" id="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
               

            <label for="categoria">Categoria</label>
                <select name="categoria" id="categoria" class="form-control">
                    {{#each categoria}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma Categoria Registrada</option>
                    {{/each}}
                </select>


            <button type="submit" class="btn btn-success mt-2">Editar Postagem</button>

        </form>
        
    </div>
</div>


