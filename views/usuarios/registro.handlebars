

{{#each erros}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{texto}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{else}}

{{/each}}
<h3>Novo Registro</h3>
<div class="card">
    <div class="card-body">

        <form action="/usuarios/registro" method="post">

            <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" placeholder="Digite seu nome" class="form-control" required>

            <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Digite seu email" class="form-control" required>
            
            <label for="senha">Senha</label>
                <input type="password" id="senha" name="senha" placeholder="Digite sua senha" class="form-control" required>

            <label for="senha2">Repita a sua senha</label>
                <input type="password" id="senha2" name="senha2" placeholder="Digite sua senha" class="form-control" required>

            <button type="submit" class="btn btn-success mt-2">Criar Conta</button>

        </form>
        
    </div>
</div>